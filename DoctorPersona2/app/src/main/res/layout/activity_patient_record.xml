<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2"
    tools:context=".PatientRecordActivity">

    <TextView
        android:id="@+id/DoctorPrescription_TextView"
        android:layout_width="317dp"
        android:layout_height="52dp"
        android:layout_marginTop="31dp"
        android:hint="Display prescription"
        app:layout_constraintEnd_toEndOf="@+id/DoctorDOB_TextView"
        app:layout_constraintStart_toStartOf="@+id/DoctorDOB_TextView"
        app:layout_constraintTop_toBottomOf="@+id/DoctorDOB_TextView" />

    <TextView
        android:id="@+id/DoctorName_TextView"
        android:layout_width="317dp"
        android:layout_height="52dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="51dp"
        android:hint="Display name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DoctorDOB_TextView"
        android:layout_width="317dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:hint="Display DOB"
        app:layout_constraintEnd_toEndOf="@+id/DoctorName_TextView"
        app:layout_constraintStart_toStartOf="@+id/DoctorName_TextView"
        app:layout_constraintTop_toBottomOf="@+id/DoctorName_TextView" />

    <Button
        android:id="@+id/DoctorAppointment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="111dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:onClick="DoctorAppointment"
        android:text="Make Appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DoctorPrescription_TextView" />

    <Button
        android:id="@+id/DoctorBack_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="175dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:onClick="DoctorBack"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DoctorAppointment_button" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="Patient Record"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>